{% extends 'authenticated-base.html.twig' %}

{% block content %}

    <div class="page-header">
        <h4 class="page-title">Gatherings</h4>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ url('homegroup_show', {'id':homeGroup.id}) }}">{{ homeGroup.name }}</a></li>
            <li class="breadcrumb-item active" aria-current="page">Create gathering</li>
        </ol>
    </div>

    <div class="row">
        <div class="col-md-12">
            {{ form_start(form, {'attr':{'class':'card'}}) }}
                <div class="card-body">
                    {{ form_widget(form) }}
                </div>
                <div class="card-footer text-right">
                    <div class="d-flex">
                        <a href="{{ url('homegroup_show', {'id':homeGroup.id}) }}" class="btn btn-link">Cancel</a>
                        <button type="submit" class="btn btn-primary ml-auto">Create gathering</button>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock content %}